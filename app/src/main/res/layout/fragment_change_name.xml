<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ChangeNameFragment">

    <EditText
        android:layout_width="match_parent"
        style="@style/EditText"
        android:layout_height="wrap_content"
        android:id="@+id/settings_input_name"
        android:inputType="text"
        android:hint="@string/settings_hint_input_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:layout_width="match_parent"
        style="@style/EditText"
        android:layout_height="wrap_content"
        android:id="@+id/settings_input_surname"
        android:inputType="text"
        android:hint="@string/settings_hint_input_surname"
        app:layout_constraintTop_toBottomOf="@id/settings_input_name"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>